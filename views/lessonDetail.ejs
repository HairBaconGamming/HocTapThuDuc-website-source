<%- include('partials/header') %>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/line-numbers/prism-line-numbers.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

<link rel="stylesheet" href="/css/styleLessonDetail.css">

<div class="container-fluid bg-white border-bottom shadow-sm sticky-top" style="top: 0; z-index: 99;">
    <div class="container py-2 d-flex align-items-center justify-content-between">
        <%- include('partials/breadcrumb') %>
        
        <button class="btn btn-light d-xl-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#tocOffcanvas">
            <i class="fas fa-list-ul"></i>
        </button>
    </div>
</div>

<div class="lesson-wrapper">
    
    <aside class="lesson-sidebar-left">
        <div class="d-flex align-items-center gap-2 mb-4 text-muted">
            <a href="<%= course ? ('/course/' + course._id) : '/subjects' %>" class="text-decoration-none fw-bold text-secondary">
                <i class="fas fa-arrow-left"></i> Trở về khóa học
            </a>
        </div>
        
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white fw-bold py-3 border-bottom-0">
                <i class="fas fa-layer-group me-2 text-primary"></i> Bài học trong khóa
            </div>
            <div class="list-group list-group-flush" style="max-height: calc(100vh - 250px); overflow-y: auto;">
                <% if(course && course.lessons) { %>
                    <% course.lessons.forEach((l, idx) => { %>
                        <a href="/lesson/<%= l._id %>" class="list-group-item list-group-item-action <%= l._id.toString() === lesson._id.toString() ? 'active fw-bold' : '' %> d-flex justify-content-between align-items-center">
                            <div class="text-truncate" style="max-width: 180px;">
                                <span class="me-2 badge bg-light text-dark border"><%= idx + 1 %></span> 
                                <%= l.title %>
                            </div>
                            <% if(l.completed) { %><i class="fas fa-check-circle text-success small"></i><% } %>
                        </a>
                    <% }); %>
                <% } else { %>
                    <div class="p-3 text-muted small text-center">Đang cập nhật danh sách...</div>
                <% } %>
            </div>
        </div>
    </aside>

    <main class="lesson-main">
        <div class="lesson-card">
            <div class="lesson-header-content">
                <div class="lesson-meta">
                    <span class="badge-cat"><%= lesson.category || 'Bài học' %></span>
                    <span><i class="far fa-calendar-alt"></i> <%= new Date(lesson.createdAt).toLocaleDateString('vi-VN') %></span>
                    <span><i class="far fa-user"></i> <%= lesson.createdBy ? lesson.createdBy.username : 'Admin' %></span>
                </div>
                <h1 class="lesson-title"><%= lesson.title %></h1>
                <div class="title-divider"></div>
            </div>

            <div id="lessonContentArea" class="lesson-body" data-content='<%= lesson.content %>'>
                <div class="loading-state">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-3 text-muted">Đang tải nội dung...</p>
                </div>
            </div>

            <div class="lesson-footer">
                <p class="text-muted mb-3 small" id="finish-hint">Hãy đọc kỹ nội dung trước khi hoàn thành</p>
                <button id="btn-finish-lesson" class="btn btn-success btn-lg px-5 py-3 rounded-pill shadow-sm" onclick="completeLesson('<%= lesson._id %>')">
                    <span class="d-flex align-items-center gap-2">
                        <i class="fas fa-check-circle"></i>
                        <span id="btn-finish-text">Hoàn thành bài học</span>
                    </span>
                </button>
            </div>
        </div>

        <div class="lesson-card p-4">
            <h5 class="fw-bold mb-3"><i class="far fa-comments me-2"></i>Thảo luận</h5>
            <div class="text-muted text-center py-4 bg-light rounded border border-dashed">
                Tính năng bình luận đang được nâng cấp...
            </div>
        </div>
    </main>

    <aside class="lesson-sidebar-right">
        <div class="toc-container sticky-top" style="top: 100px;">
            <div class="toc-title"><i class="fas fa-list-alt me-2"></i> Mục lục bài viết</div>
            <ul id="toc-list" class="toc-list">
                <li class="text-muted small fst-italic ps-2">Đang tạo mục lục...</li>
            </ul>

            <div class="mt-4 pt-3 border-top">
                <div class="toc-title mb-2">Tiến độ phiên học</div>
                <div class="progress" style="height: 8px; border-radius: 4px;">
                    <div id="ss-progress" class="progress-bar bg-success" role="progressbar" style="width: 0%"></div>
                </div>
                <div class="d-flex justify-content-between mt-2 small text-muted font-monospace">
                    <span>Thời gian</span>
                    <span id="ss-timer">00:00</span>
                </div>
            </div>
        </div>
    </aside>
</div>

<div class="offcanvas offcanvas-end" tabindex="-1" id="tocOffcanvas">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title fw-bold">Mục lục</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <ul id="toc-list-mobile" class="toc-list"></ul>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/contrib/auto-render.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/dompurify@3.0.6/dist/purify.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/autoloader/prism-autoloader.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/line-numbers/prism-line-numbers.min.js"></script>

<script src="/js/lessonDetail.js"></script>

<%- include('partials/footer') %>