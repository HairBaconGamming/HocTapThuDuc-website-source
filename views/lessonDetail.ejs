<style>
    /* ===== RUSTIC STYLE ===== */
    
    /* Offcanvas Customization */
    .offcanvas {
        background: #fafaf8;
        box-shadow: -2px 0 8px rgba(0, 0, 0, 0.08);
    }

    .offcanvas-header {
        background: #8b7f7f;
        color: #fafaf8;
        padding: 1.25rem;
        border-bottom: 1px solid #e8e6e1;
    }

    .offcanvas-header .offcanvas-title {
        font-weight: 600;
        font-size: 1rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .offcanvas-body {
        padding: 1.25rem;
        max-height: calc(100vh - 100px);
        overflow-y: auto;
        background: white;
    }

    .toc-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .toc-list li {
        margin-bottom: 0.3rem;
    }

    .toc-list a {
        display: flex;
        align-items: center;
        padding: 0.6rem 0.8rem;
        border-radius: 6px;
        text-decoration: none;
        color: #4a4a4a;
        transition: all 0.2s;
        border-left: 3px solid transparent;
        font-weight: 500;
        font-size: 0.9rem;
    }

    .toc-list a:hover {
        background: #f5f1ed;
        border-left-color: #8b7f7f;
        color: #2c2c2c;
    }

    .toc-list a.active {
        background: #f0ebe5;
        border-left-color: #8b7f7f;
        color: #2c2c2c;
        font-weight: 600;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(20px); }
    }

    @keyframes slideInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @media (max-width: 768px) {
        .offcanvas-body {
            padding: 1rem;
        }
    }
</style>

