<%- include('partials/header') %>
<link rel="stylesheet" href="/css/styleNewsDetail.css">

<div class="container">
    <div class="article-container">
        <div class="article-header">
            <span class="article-cat"><%= newsItem.category %></span>
            <h1 class="article-title"><%= newsItem.title %></h1>
            <div class="article-meta">
                Đăng bởi <b><%= newsItem.postedBy ? newsItem.postedBy.username : 'Admin' %></b> 
                • <%= new Date(newsItem.createdAt).toLocaleDateString('vi-VN') %>
            </div>
        </div>

        <div class="article-content">
            <%- marked.parse(newsItem.content) %>
        </div>

        <div class="article-actions">
            <a href="/news" class="btn btn-secondary">&larr; Quay lại danh sách</a>
            
            <% if (user && newsItem.postedBy && user._id.toString() === newsItem.postedBy._id.toString()) { %>
                <div>
                    <a href="/news/<%= newsItem._id %>/edit" class="btn btn-sm" style="background:#eee;">Sửa</a>
                    </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>