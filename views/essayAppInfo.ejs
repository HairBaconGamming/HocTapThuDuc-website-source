<style>
    /* Basic styles for this specific page */
    .essay-app-info-page {
        padding: 40px 20px;
        max-width: 900px; /* Slightly wider for more features */
        margin: 40px auto;
        background: rgba(var(--bg-dark-rgb), 0.7);
        border: 1px solid var(--border-color);
        border-radius: var(--border-radius-medium);
        color: var(--text-light);
    }
    .essay-app-info-page h1 {
        color: var(--primary-color);
        text-align: center;
        margin-bottom: 30px;
        font-size: 2.2rem;
    }
    .essay-app-info-page h2 {
        color: var(--secondary-color);
        border-bottom: 1px dashed var(--border-color-light);
        padding-bottom: 8px;
        margin-top: 35px;
        margin-bottom: 20px;
        font-size: 1.6rem;
    }
    .essay-app-info-page ul {
        list-style: none;
        padding-left: 0;
    }
    .essay-app-info-page li {
        margin-bottom: 15px;
        padding-left: 25px;
        position: relative;
        font-size: 1.05rem;
        line-height: 1.7;
        color: var(--text-medium);
    }
    .essay-app-info-page li::before {
        content: '✨'; /* Or other icons like 💡, 🎯, 📚 */
        position: absolute;
        left: 0;
        top: 2px;
        color: var(--accent-color);
        font-size: 1rem;
    }
    .essay-app-info-page ul ul {
        margin-top: 10px;
        margin-left: 15px;
    }
    .essay-app-info-page ul ul li::before {
        content: '➤';
        font-size: 0.9rem;
        color: var(--primary-color);
    }
    .essay-app-info-page p {
        color: var(--text-medium);
        line-height: 1.8;
        margin-bottom: 20px;
        font-size: 1.05rem;
    }
    .essay-app-info-page strong {
        color: var(--accent-color);
        font-weight: 600;
    }
    .essay-app-info-page code { /* Style for hierarchical markers */
        background-color: rgba(var(--primary-rgb), 0.1);
        color: var(--primary-color-light);
        padding: 2px 6px;
        border-radius: 4px;
        font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
        font-size: 0.95em;
    }
    .highlight-feature {
        background-color: rgba(var(--accent-rgb), 0.15);
        color: var(--accent-color-light);
        padding: 1px 4px;
        border-radius: 3px;
        font-weight: 500;
    }
    .version-tag {
        font-size: 0.8em;
        color: var(--secondary-color);
        background-color: rgba(var(--secondary-rgb), 0.1);
        padding: 2px 5px;
        border-radius: 3px;
        margin-left: 5px;
        vertical-align: middle;
    }
    .comparison-example {
        font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
        font-size: 0.95em;
    }
    .comparison-example .added { background-color: rgba(40, 167, 69, 0.2); color: #9fefb5; text-decoration: none; }
    .comparison-example .removed { background-color: rgba(220, 53, 69, 0.2); color: #f5c2c7; text-decoration: line-through; }
    .new-badge { /* Style for NEW badge */
        font-size: 0.75em;
        color: #fff;
        background-color: #dc3545; /* Red badge */
        padding: 2px 6px;
        border-radius: 10px;
        margin-left: 6px;
        vertical-align: middle;
        font-weight: bold;
    }
    .game-icon { /* Style for game icons */
        margin-right: 8px;
        color: var(--accent-color); /* Match feature bullet */
        width: 18px; /* Ensure consistent width */
        text-align: center;
        display: inline-block;
    }

    .download-button-section { text-align: center; margin-top: 40px; padding-top: 30px; border-top: 1px solid var(--border-color); }
    .btn-download-app { display: inline-flex; align-items: center; gap: 10px; padding: 12px 30px; font-size: 1.1rem; font-weight: 600; text-decoration: none; border-radius: var(--border-radius-pill); background: linear-gradient(45deg, var(--primary-color), var(--secondary-color)); color: white; box-shadow: 0 0 15px -3px var(--glow-color-primary), 0 4px 8px rgba(0,0,0,0.2); transition: all 0.3s ease; }
