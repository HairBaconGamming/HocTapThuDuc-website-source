    <script>
        const serverChartData = <%- (typeof chartData !== 'undefined' && chartData) ? JSON.stringify(chartData) : '{}' %>;

        function showTab(tabId) {
            document.querySelectorAll('.section').forEach(el => el.classList.remove('active'));
            document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));
            
            const tabSection = document.getElementById(tabId);
            if (tabSection) tabSection.classList.add('active');
            
            const menuMap = {'dashboard': 0, 'users': 1, 'courses': 2, 'subjects': 3, 'news': 4};
            const menus = document.querySelectorAll('.nav-item');
            if (menus[menuMap[tabId]]) menus[menuMap[tabId]].classList.add('active');

            const titles = {
                'dashboard': 'Dashboard', 'users': 'Qu·∫£n L√Ω Ng∆∞·ªùi D√πng', 
                'courses': 'Qu·∫£n L√Ω Kh√≥a H·ªçc', 'subjects': 'Qu·∫£n L√Ω M√¥n H·ªçc', 'news': 'Qu·∫£n L√Ω Tin T·ª©c'
            };
            if(titles[tabId]) document.getElementById('pageHeaderTitle').innerText = titles[tabId];

            const url = new URL(window.location);
            url.searchParams.set('tab', tabId);
            window.history.pushState({}, '', url);
        }

        function filterTable(tableId, query) {
            const filter = query.toUpperCase();
            const rows = document.getElementById(tableId).getElementsByTagName("tr");
            for (let i = 1; i < rows.length; i++) {
                const txt = rows[i].textContent || rows[i].innerText;
                rows[i].style.display = txt.toUpperCase().indexOf(filter) > -1 ? "" : "none";
            }
        }

        // --- RENDER 3 BI·ªÇU ƒê·ªí ---
        function renderCharts(data) {
            Chart.defaults.font.family = "'Quicksand', sans-serif";
            Chart.defaults.color = '#64748b';

            // 1. GROWTH CHART (LINE - Dual Axis)
            if(document.getElementById('growthChart')) {
                const ctx1 = document.getElementById('growthChart').getContext('2d');
                
                const gradientVisits = ctx1.createLinearGradient(0, 0, 0, 400);
                gradientVisits.addColorStop(0, 'rgba(79, 70, 229, 0.4)');
                gradientVisits.addColorStop(1, 'rgba(79, 70, 229, 0.0)');

                const gradientReg = ctx1.createLinearGradient(0, 0, 0, 400);
                gradientReg.addColorStop(0, 'rgba(16, 185, 129, 0.4)');
                gradientReg.addColorStop(1, 'rgba(16, 185, 129, 0.0)');

                new Chart(ctx1, {
                    type: 'line',
                    data: {
                        labels: data.growth.labels,
                        datasets: [
                            {
                                label: 'Truy c·∫≠p',
                                data: data.growth.visits,
                                borderColor: '#4f46e5',
                                backgroundColor: gradientVisits,
                                borderWidth: 3,
                                fill: true,
                                tension: 0.4,
                                yAxisID: 'y',
                                pointRadius: 4,
                                pointHoverRadius: 8
                            },
                            {
                                label: 'User m·ªõi',
                                data: data.growth.registers,
                                borderColor: '#10b981',
                                backgroundColor: gradientReg,
                                borderWidth: 2,
                                borderDash: [5,5],
                                fill: true,
                                tension: 0.4,
                                yAxisID: 'y1',
                                pointRadius: 4
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        interaction: { mode: 'index', intersect: false },
                        plugins: { legend: { position: 'top', align: 'end' } },
                        scales: {
                            x: { grid: { display: false } },
                            y: { display: true, position: 'left', grid: { borderDash: [5, 5] } },
                            y1: { display: true, position: 'right', grid: { display: false }, min: 0 }
                        }
                    }
                });
            }

            // 2. USER CHART (DOUGHNUT)
            if(document.getElementById('userChart')) {
                const ctx2 = document.getElementById('userChart').getContext('2d');
                new Chart(ctx2, {
                    type: 'doughnut',
                    data: {
                        labels: data.userPie.labels,
                        datasets: [{
                            data: data.userPie.data,
                            backgroundColor: [
                                '#cbd5e1', // Th∆∞·ªùng
                                '#f59e0b', // PRO
                                '#3b82f6', // Teacher
                                '#ef4444'  // Admin
                            ],
                            borderWidth: 0,
                            hoverOffset: 10
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        cutout: '70%',
                        plugins: {
                            legend: { position: 'bottom', labels: { usePointStyle: true, padding: 20 } }
                        }
                    }
                });
            }

            // 3. CONTENT CHART (BAR)
            if(document.getElementById('contentChart')) {
                const ctx3 = document.getElementById('contentChart').getContext('2d');
                new Chart(ctx3, {
                    type: 'bar',
                    data: {
                        labels: data.contentBar.labels,
                        datasets: [{
                            label: 'S·ªë kh√≥a h·ªçc',
                            data: data.contentBar.data,
                            backgroundColor: '#6366f1',
                            borderRadius: 6,
                            barThickness: 30
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: {
                            y: { beginAtZero: true, grid: { borderDash: [5, 5] }, ticks: { precision: 0 } },
                            x: { grid: { display: false } }
                        }
                    }
                });
            }
        }

        window.onload = function() {
            const params = new URLSearchParams(window.location.search);
            const tab = params.get('tab') || 'dashboard';
            showTab(tab);

            if(serverChartData && serverChartData.growth) {
                renderCharts(serverChartData);
            }
        }

        function openUserModal(id, username, isAdmin, isPro, isTeacher, key) {
            document.getElementById('editUserId').value = id;
            document.getElementById('editUsername').innerText = username;
            
            const adminCheck = document.getElementById('editIsAdmin');
            if (adminCheck) adminCheck.checked = isAdmin;
            
            document.getElementById('editIsPro').checked = isPro;
            document.getElementById('editIsTeacher').checked = isTeacher;
            document.getElementById('editProKey').value = key;
            
            document.getElementById('modalUser').style.display = 'flex';
        }

        function openSubjectModal(id, name, image) {
            document.getElementById('editSubjectId').value = id;
            document.getElementById('editSubjectName').value = name;
            document.getElementById('editSubjectImage').value = image;
            document.getElementById('previewIcon').src = image || 'https://cdn-icons-png.flaticon.com/512/3135/3135715.png';
            document.getElementById('modalSubject').style.display = 'flex';
        }

        function generateKey() {
            const charset = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789";
            let retVal = "";
            for (let i = 0; i < 12; ++i) retVal += charset.charAt(Math.floor(Math.random() * charset.length));
            document.getElementById('editProKey').value = "PRO-" + retVal;
        }

        function confirmDelete(actionUrl, fieldName, idValue) {
            Swal.fire({
                title: 'X√°c nh·∫≠n x√≥a?',
                text: "D·ªØ li·ªáu s·∫Ω b·ªã x√≥a vƒ©nh vi·ªÖn!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#64748b',
                confirmButtonText: 'X√≥a ngay',
                cancelButtonText: 'H·ªßy'
            }).then((result) => {
                if (result.isConfirmed) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = actionUrl;
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = fieldName;
                    input.value = idValue;
                    form.appendChild(input);
                    document.body.appendChild(form);
                    form.submit();
                }
            })
        }

        window.onclick = function(e) {
            if (e.target.classList.contains('modal')) e.target.style.display = "none";
        }
    </script>
