        function generateKey() {
            const charset = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789";
            let retVal = "";
            for (let i = 0; i < 12; ++i) retVal += charset.charAt(Math.floor(Math.random() * charset.length));
            document.getElementById('editProKey').value = "PRO-" + retVal;
        }

        function confirmDelete(actionUrl, fieldName, idValue) {
            Swal.fire({
                title: 'B·∫°n ch·∫Øc ch·∫Øn ch·ª©?',
                text: "H√†nh ƒë·ªông n√†y kh√¥ng th·ªÉ ho√†n t√°c!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#64748b',
                confirmButtonText: 'V√¢ng, x√≥a n√≥!',
                cancelButtonText: 'H·ªßy'
            }).then((result) => {
                if (result.isConfirmed) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = actionUrl;
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = fieldName;
                    input.value = idValue;
                    form.appendChild(input);
                    document.body.appendChild(form);
                    form.submit();
                }
            })
        }

