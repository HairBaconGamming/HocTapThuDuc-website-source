        }

        function openUserModal(id, username, isAdmin, isPro, isTeacher, key) {
            document.getElementById('editUserId').value = id;
            document.getElementById('editUsername').innerText = username;
            
            // N·∫øu checkbox Admin t·ªìn t·∫°i (ch·ªâ truonghoangnam m·ªõi th·∫•y), th√¨ set gi√° tr·ªã
            const adminCheckbox = document.getElementById('editIsAdmin');
            if (adminCheckbox) {
                adminCheckbox.checked = isAdmin;
