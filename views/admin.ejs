    <style>
        :root {
            --primary: #4f46e5;
            --secondary: #6366f1;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --dark: #1e293b;
            --light: #f8fafc;
            --sidebar-width: 260px;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Quicksand', sans-serif; }
        body { background: var(--light); display: flex; height: 100vh; overflow: hidden; }

        /* SIDEBAR */
        .sidebar {
            width: var(--sidebar-width);
            background: var(--dark);
            color: white;
            display: flex;
            flex-direction: column;
            transition: 0.3s;
            box-shadow: 4px 0 10px rgba(0,0,0,0.1);
            z-index: 100;
        }
        .brand {
            padding: 25px;
            font-size: 1.5rem;
            font-weight: 800;
            background: linear-gradient(45deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: flex;
            align-items: center;
            gap: 10px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        .menu { flex: 1; padding: 20px 10px; overflow-y: auto; }
        .menu-label { font-size: 0.75rem; text-transform: uppercase; color: #94a3b8; margin: 15px 15px 5px; font-weight: 700; }
        .nav-item {
            padding: 12px 20px;
            margin-bottom: 5px;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.2s;
            color: #cbd5e1;
            display: flex;
            align-items: center;
            gap: 12px;
            font-weight: 600;
        }
        .nav-item:hover, .nav-item.active {
            background: var(--primary);
            color: white;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
            transform: translateX(5px);
        }

        /* MAIN CONTENT */
        .main {
            flex: 1;
            padding: 30px;
            overflow-y: auto;
            position: relative;
        }

        /* HEADER */
        .header-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }
        .page-title h2 { font-size: 1.8rem; color: var(--dark); font-weight: 800; }
        .page-title p { color: #64748b; }
        .admin-profile { display: flex; align-items: center; gap: 15px; }
        .admin-avatar { width: 45px; height: 45px; border-radius: 50%; object-fit: cover; border: 2px solid var(--primary); }

        /* CARDS (DASHBOARD) */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
            display: flex;
            align-items: center;
            justify-content: space-between;
            transition: transform 0.2s;
        }
        .stat-card:hover { transform: translateY(-5px); }
        .stat-info h3 { font-size: 2rem; color: var(--dark); font-weight: 800; }
        .stat-info p { color: #64748b; font-size: 0.9rem; }
        .stat-icon {
            width: 50px; height: 50px;
            border-radius: 12px;
            display: flex; align-items: center; justify-content: center;
            font-size: 1.5rem;
        }

        /* CHART SECTION */
        .chart-container {
            background: white;
            padding: 25px;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
            margin-bottom: 30px;
            height: 400px;
        }

        /* TABLES */
        .table-wrapper {
            background: white;
            padding: 25px;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
            animation: fadeIn 0.4s ease;
        }
        .table-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; }
        .search-box input {
            padding: 10px 15px; border: 1px solid #e2e8f0; border-radius: 8px; width: 250px; outline: none; transition: 0.2s;
        }
        .search-box input:focus { border-color: var(--primary); box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1); }
        
        table { width: 100%; border-collapse: collapse; }
        th, td { padding: 15px; text-align: left; border-bottom: 1px solid #f1f5f9; }
        th { color: #64748b; font-weight: 600; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px; }
        tr:hover { background: #f8fafc; }
        
        .badge { padding: 5px 10px; border-radius: 20px; font-size: 0.75rem; font-weight: 700; }
        .badge-pro { background: #fffbeb; color: #d97706; border: 1px solid #fcd34d; }
        .badge-teacher { background: #eff6ff; color: #2563eb; border: 1px solid #bfdbfe; }
        .badge-admin { background: #fef2f2; color: #dc2626; border: 1px solid #fecaca; }

        /* BUTTONS */
        .btn { padding: 8px 16px; border-radius: 8px; border: none; cursor: pointer; font-weight: 600; font-size: 0.9rem; transition: 0.2s; color: white; display: inline-flex; align-items: center; gap: 5px; text-decoration: none; }
        .btn-primary { background: var(--primary); box-shadow: 0 4px 6px rgba(79, 70, 229, 0.2); }
        .btn-primary:hover { background: #4338ca; transform: translateY(-2px); }
        .btn-danger { background: var(--danger); box-shadow: 0 4px 6px rgba(239, 68, 68, 0.2); }
        .btn-warning { background: var(--warning); color: white; }
        .btn-sm { padding: 5px 10px; font-size: 0.8rem; }
        .action-group { display: flex; gap: 8px; }

        /* SECTIONS (TABS) */
        .section { display: none; }
        .section.active { display: block; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

        /* MODALS */
        .modal { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.4); backdrop-filter: blur(4px); z-index: 1000; justify-content: center; align-items: center; }
        .modal-content { background: white; padding: 30px; border-radius: 20px; width: 500px; max-width: 95%; box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1); animation: slideDown 0.3s; }
        @keyframes slideDown { from { transform: translateY(-20px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }
        
        input[type="text"], input[type="password"], textarea, select {
            width: 100%; padding: 12px; margin: 8px 0 20px; border: 1px solid #e2e8f0; border-radius: 8px; font-size: 0.95rem; outline: none;
        }
        input:focus, textarea:focus, select:focus { border-color: var(--primary); }

        /* GENERATE KEY BUTTON */
        .key-input-group { display: flex; gap: 10px; align-items: center; margin-bottom: 20px; }
        .key-input-group input { margin-bottom: 0; flex: 1; font-family: monospace; letter-spacing: 1px; color: var(--primary); font-weight: bold; }
    </style>
</head>
