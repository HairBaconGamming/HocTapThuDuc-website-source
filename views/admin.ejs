    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        :root {
            --primary: #4f46e5;      /* Indigo */
            --primary-dark: #4338ca;
            --secondary: #06b6d4;    /* Cyan */
            --success: #10b981;      /* Emerald */
            --warning: #f59e0b;      /* Amber */
            --danger: #ef4444;       /* Red */
            --dark: #1e293b;         /* Slate 800 */
            --light: #f1f5f9;        /* Slate 100 */
            --white: #ffffff;
            --text-sub: #64748b;
            --sidebar-width: 260px;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Quicksand', sans-serif; }
        body { background: var(--light); display: flex; height: 100vh; overflow: hidden; color: var(--dark); }

        /* --- SIDEBAR --- */
        .sidebar {
            width: var(--sidebar-width);
            background: #0f172a; /* Slate 900 */
            color: white;
            display: flex;
            flex-direction: column;
            transition: 0.3s;
            box-shadow: 4px 0 20px rgba(0,0,0,0.1);
            z-index: 100;
        }
        .brand {
            padding: 25px;
            font-size: 1.4rem;
            font-weight: 800;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: flex;
            align-items: center;
            gap: 12px;
            letter-spacing: -0.5px;
            border-bottom: 1px solid rgba(255,255,255,0.05);
        }
        .menu { flex: 1; padding: 20px 12px; overflow-y: auto; }
        .menu::-webkit-scrollbar { width: 5px; }
        .menu::-webkit-scrollbar-thumb { background: #334155; border-radius: 4px; }
        
        .menu-label { 
            font-size: 0.7rem; text-transform: uppercase; color: #64748b; 
            margin: 20px 15px 8px; font-weight: 700; letter-spacing: 1px;
        }
        .nav-item {
            padding: 12px 20px;
            margin-bottom: 6px;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.25s ease;
            color: #94a3b8;
            display: flex;
            align-items: center;
            gap: 14px;
            font-weight: 600;
            font-size: 0.95rem;
        }
        .nav-item:hover { color: white; background: rgba(255,255,255,0.05); }
        .nav-item.active {
            background: var(--primary);
            color: white;
            box-shadow: 0 4px 15px rgba(79, 70, 229, 0.4);
        }
        .nav-item i { width: 20px; text-align: center; }

        /* --- MAIN CONTENT --- */
        .main {
            flex: 1;
            padding: 30px 40px;
            overflow-y: auto;
            position: relative;
        }

        /* Header Bar */
        .header-bar {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            margin-bottom: 35px;
        }
        .page-title h2 { font-size: 2rem; color: var(--dark); font-weight: 800; letter-spacing: -1px; margin-bottom: 5px; }
        .page-title p { color: var(--text-sub); font-size: 0.95rem; }
        
        .admin-profile { 
            display: flex; align-items: center; gap: 15px; 
            background: var(--white); padding: 8px 15px 8px 20px; 
            border-radius: 50px; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
        }
        .admin-avatar { width: 42px; height: 42px; border-radius: 50%; object-fit: cover; border: 2px solid var(--primary); }

        /* --- STAT CARDS --- */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }
        .stat-card {
            background: var(--white);
            padding: 25px;
            border-radius: 20px;
            box-shadow: 0 4px 20px -5px rgba(0,0,0,0.05);
            display: flex;
            align-items: center;
            justify-content: space-between;
            transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            border: 1px solid #f8fafc;
        }
        .stat-card:hover { transform: translateY(-5px); box-shadow: 0 10px 25px -5px rgba(0,0,0,0.1); }
        .stat-info h3 { font-size: 2.2rem; color: var(--dark); font-weight: 800; line-height: 1.2; }
        .stat-info p { color: var(--text-sub); font-size: 0.9rem; font-weight: 600; }
        .stat-icon {
            width: 55px; height: 55px;
            border-radius: 16px;
            display: flex; align-items: center; justify-content: center;
            font-size: 1.6rem;
        }

        /* --- CHARTS GRID LAYOUT --- */
        .charts-wrapper {
            display: grid;
            grid-template-columns: 2fr 1fr; /* 2 ph·∫ßn tr√°i, 1 ph·∫ßn ph·∫£i */
            grid-template-rows: auto auto;
            gap: 25px;
            margin-bottom: 30px;
        }

        .chart-card {
            background: var(--white);
            padding: 25px;
            border-radius: 20px;
            box-shadow: 0 4px 20px -5px rgba(0,0,0,0.05);
            border: 1px solid #f8fafc;
            display: flex;
            flex-direction: column;
        }

        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .chart-header h3 { font-size: 1.1rem; font-weight: 700; color: var(--dark); }

        /* Chart 1: Growth (Full width on mobile, top large on desktop) */
        .chart-growth {
            grid-column: 1 / -1; /* Chi·∫øm h·∫øt h√†ng ngang */
            height: 400px;
        }

        /* Chart 2 & 3: Half width */
        .chart-half {
            height: 350px;
        }

        @media (max-width: 1200px) {
            .charts-wrapper { grid-template-columns: 1fr; }
            .chart-growth { grid-column: 1; }
        }

        /* --- TABLES --- */
        .table-wrapper {
            background: var(--white);
            padding: 30px;
            border-radius: 24px;
            box-shadow: 0 4px 20px -5px rgba(0,0,0,0.05);
            animation: fadeIn 0.4s ease;
        }
        .table-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px; }
        .table-header h3 { font-size: 1.25rem; font-weight: 700; color: var(--dark); }
        
        .search-box { position: relative; }
        .search-box input {
            padding: 12px 20px 12px 45px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            width: 300px;
            outline: none;
            transition: 0.2s;
            font-weight: 600;
            color: var(--dark);
        }
        .search-box i { position: absolute; left: 15px; top: 50%; transform: translateY(-50%); color: #94a3b8; }
        .search-box input:focus { border-color: var(--primary); box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1); }
        
        table { width: 100%; border-collapse: separate; border-spacing: 0; }
        th { 
            text-align: left; padding: 15px 20px; 
            color: #64748b; font-weight: 700; font-size: 0.8rem; 
            text-transform: uppercase; letter-spacing: 0.5px;
            border-bottom: 2px solid #f1f5f9;
        }
        td { padding: 16px 20px; border-bottom: 1px solid #f1f5f9; color: var(--dark); vertical-align: middle; }
        tr:last-child td { border-bottom: none; }
        tr:hover td { background: #f8fafc; }
        
        .badge { padding: 6px 12px; border-radius: 30px; font-size: 0.75rem; font-weight: 700; display: inline-block; }
        .badge-pro { background: #fff7ed; color: #ea580c; border: 1px solid #fed7aa; }
        .badge-teacher { background: #eff6ff; color: #2563eb; border: 1px solid #bfdbfe; }
        .badge-admin { background: #fef2f2; color: #dc2626; border: 1px solid #fecaca; }
        .badge-user { background: #f1f5f9; color: #475569; }

        /* BUTTONS */
        .btn { 
            padding: 10px 20px; border-radius: 10px; border: none; cursor: pointer; 
            font-weight: 600; font-size: 0.9rem; transition: 0.2s; color: white; 
            display: inline-flex; align-items: center; gap: 8px; text-decoration: none;
        }
        .btn:active { transform: scale(0.95); }
        .btn-primary { background: var(--primary); box-shadow: 0 4px 10px rgba(79, 70, 229, 0.25); }
        .btn-primary:hover { background: var(--primary-dark); transform: translateY(-2px); }
        .btn-danger { background: var(--danger); box-shadow: 0 4px 10px rgba(239, 68, 68, 0.25); }
        .btn-warning { background: var(--warning); color: white; }
        .btn-sm { padding: 8px 12px; font-size: 0.85rem; border-radius: 8px; }
        .action-group { display: flex; gap: 8px; }

        /* MODALS & FORMS */
        .section { display: none; }
        .section.active { display: block; animation: fadeIn 0.3s ease; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

        .modal { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(15, 23, 42, 0.6); backdrop-filter: blur(4px); z-index: 1000; justify-content: center; align-items: center; }
        .modal-content { 
            background: white; padding: 40px; border-radius: 24px; width: 500px; max-width: 95%; 
            box-shadow: 0 25px 50px -12px rgba(0,0,0,0.25); animation: slideUp 0.3s cubic-bezier(0.16, 1, 0.3, 1); 
        }
        @keyframes slideUp { from { transform: translateY(50px) scale(0.9); opacity: 0; } to { transform: translateY(0) scale(1); opacity: 1; } }
        
        input, textarea, select {
            width: 100%; padding: 14px; margin: 8px 0 20px; border: 2px solid #e2e8f0; 
            border-radius: 12px; font-size: 0.95rem; outline: none; transition: 0.2s;
        }
        input:focus, textarea:focus, select:focus { border-color: var(--primary); background: #fff; }
        label { font-weight: 700; color: #475569; font-size: 0.9rem; margin-bottom: 5px; display: block; }
        
        .key-input-group { display: flex; gap: 10px; align-items: center; margin-bottom: 20px; }
        .key-input-group input { margin-bottom: 0; flex: 1; font-family: monospace; letter-spacing: 1px; color: var(--primary); font-weight: bold; background: #f8fafc; }
    </style>
</head>
