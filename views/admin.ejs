<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/css/admin.css">
    <script>
        // Truyền quyền của user hiện tại cho client-side script
        const currentUser = <%- JSON.stringify({ isAdmin: user.isAdmin, isTeacher: user.isTeacher }) %>;
    </script>
</head>
<body>
    <div class="admin-panel-container">
        <!-- ===== SIDEBAR ===== -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <i class="fas fa-shield-alt logo-icon"></i>
                <h1 class="logo-text">Control</h1>
            </div>
            <nav class="sidebar-nav">
                <a class="nav-link active" data-tab="dashboard">
                    <i class="fas fa-chart-pie nav-icon"></i><span>Dashboard</span>
                </a>
                <a class="nav-link" data-tab="users">
                    <i class="fas fa-users nav-icon"></i><span>Users</span>
                </a>
                <a class="nav-link" data-tab="subjects">
                    <i class="fas fa-book nav-icon"></i><span>Subjects</span>
                </a>
                <% if (user.isAdmin) { %>
                <a class="nav-link" data-tab="proKeys">
                    <i class="fas fa-key nav-icon"></i><span>PRO Keys</span>
                </a>
                <a class="nav-link" data-tab="system">
                    <i class="fas fa-cogs nav-icon"></i><span>System</span>
                </a>
                <% } %>
                <a href="/" class="nav-link nav-link-bottom">
                    <i class="fas fa-home nav-icon"></i><span>Về trang chính</span>
                </a>
            </nav>
        </aside>

        <!-- ===== MAIN CONTENT ===== -->
        <main class="main-content">
            <!-- Dashboard Tab -->
            <div id="dashboard" class="tab-content active">
                <h2><i class="fas fa-tachometer-alt"></i>Tổng quan</h2>
                <div id="stats-grid" class="stats-grid"></div>
                <div class="dashboard-grid">
                    <div class="activity-list">
                        <h3><i class="fas fa-user-plus"></i>Người dùng mới</h3>
                        <ul id="recent-users-list"></ul>
                    </div>
                    <div class="activity-list">
                        <h3><i class="fas fa-book-open"></i>Bài học mới</h3>
                        <ul id="recent-lessons-list"></ul>
                    </div>
                </div>
            </div>

            <!-- Users Tab -->
            <div id="users" class="tab-content">
                <h2><i class="fas fa-users-cog"></i>Quản lý Người dùng</h2>
                <div class="controls-bar">
                    <input type="search" id="user-search-input" class="search-input" placeholder="Tìm theo username hoặc email...">
                    <select id="user-pro-filter" class="filter-select">
                        <option value="all">Tất cả PRO</option>
                        <option value="true">Tài khoản PRO</option>
                        <option value="false">Tài khoản thường</option>
                    </select>
                    <select id="user-banned-filter" class="filter-select">
                        <option value="all">Tất cả trạng thái</option>
                        <option value="true">Đã khóa</option>
                        <option value="false">Hoạt động</option>
                    </select>
                </div>
                <div class="table-container">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Vai trò</th>
                                <th>PRO</th>
                                <th>Points</th>
                                <th>Trạng thái</th>
                                <th>Ngày tham gia</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody id="users-table-body"></tbody>
                    </table>
                </div>
                <div id="users-pagination" class="pagination-controls"></div>
            </div>

            <!-- Subjects Tab -->
            <div id="subjects" class="tab-content">
                <h2><i class="fas fa-book-reader"></i>Quản lý Môn học</h2>
                 <div class="controls-bar">
                    <button class="btn-primary" id="add-subject-btn"><i class="fas fa-plus"></i> Thêm môn học</button>
                 </div>
                 <div class="table-container">
                    <table class="data-table">
                        <thead><tr><th>Tên</th><th>Mô tả</th><th>Ảnh</th><th>Hành động</th></tr></thead>
                        <tbody id="subjects-table-body"></tbody>
                    </table>
                </div>
            </div>

            <% if (user.isAdmin) { %>
            <!-- PRO Keys Tab (Admin Only) -->
            <div id="proKeys" class="tab-content">
                 <h2><i class="fas fa-key"></i>Khóa bí mật PRO</h2>
                 <div class="controls-bar">
                    <input type="search" id="pro-keys-search-input" class="search-input" placeholder="Tìm theo username...">
                 </div>
                 <div class="table-container">
                     <table class="data-table">
                         <thead><tr><th>Username</th><th>Secret Key</th><th>Hành động</th></tr></thead>
                         <tbody id="pro-keys-table-body"></tbody>
                     </table>
                 </div>
                 <div id="pro-keys-pagination" class="pagination-controls"></div>
            </div>

            <!-- System Tab (Admin Only) -->
            <div id="system" class="tab-content">
                <h2><i class="fas fa-server"></i>Hệ thống</h2>
                 <div class="system-actions-grid">
                    <div class="action-card">
                        <h3><i class="fas fa-robot"></i>Tạo nội dung AI</h3>
                        <p>Kích hoạt thủ công job hàng ngày để tạo bài học bằng AI cho các môn học.</p>
                        <button class="btn-primary" id="trigger-ai-btn">Kích hoạt Job</button>
                    </div>
                 </div>
            </div>
            <% } %>
        </main>
    </div>

    <!-- ===== MODALS ===== -->
    <!-- User Edit Modal -->
    <div id="user-edit-modal" class="modal-container">
        <div class="modal-content">
            <button class="modal-close-btn">&times;</button>
            <h3>Chỉnh sửa: <span id="modal-username"></span></h3>
            <form id="user-edit-form" novalidate>
                <input type="hidden" id="modal-userid">
                <div class="form-group">
                    <label for="modal-avatar">URL Avatar</label>
                    <input type="text" id="modal-avatar">
                </div>
                 <div class="form-group">
                    <label for="modal-isTeacher">Vai trò Giáo viên</label>
                    <select id="modal-isTeacher">
                        <option value="false">Không</option>
                        <option value="true">Có</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="modal-isPro">Trạng thái PRO</label>
                    <select id="modal-isPro">
                        <option value="false">Không</option>
                        <option value="true">Có</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="modal-points">Điểm</label>
                    <input type="number" id="modal-points">
                </div>
                <div class="form-group">
                    <label for="modal-growthPoints">Điểm tăng trưởng (XP)</label>
                    <input type="number" id="modal-growthPoints">
                </div>
                <div class="modal-actions">
                    <button type="submit" class="btn-primary">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Subject Add/Edit Modal -->
    <div id="subject-edit-modal" class="modal-container">
        <div class="modal-content">
            <button class="modal-close-btn">&times;</button>
            <h3 id="modal-subject-title">Thêm môn học</h3>
            <form id="subject-edit-form" novalidate>
                <input type="hidden" id="modal-subject-id">
                <div class="form-group"><label for="modal-subject-name">Tên</label><input type="text" id="modal-subject-name" required></div>
                <div class="form-group"><label for="modal-subject-description">Mô tả</label><textarea id="modal-subject-description"></textarea></div>
                <div class="form-group"><label for="modal-subject-image">URL ảnh</label><input type="text" id="modal-subject-image"></div>
                <div class="modal-actions"><button type="submit" class="btn-primary">Lưu</button></div>
            </form>
        </div>
    </div>

    <div id="toast-container"></div>
    <script src="/js/admin.js"></script>
</body>
</html>