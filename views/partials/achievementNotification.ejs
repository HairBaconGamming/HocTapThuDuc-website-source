<style>
    .achievement-toast-container {
        position: fixed;
        bottom: 30px;
        right: 30px;
        z-index: 9999;
        display: flex;
        flex-direction: column;
        gap: 15px;
        pointer-events: none; /* Cho phép click xuyên qua vùng trống */
    }

    .ach-toast {
        background: rgba(23, 23, 23, 0.95);
        backdrop-filter: blur(10px);
        border: 1px solid #ffd700; /* Viền vàng kim */
        border-radius: 16px;
        padding: 15px 20px;
        width: 320px;
        display: flex;
        align-items: center;
        gap: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5), 
                    0 0 20px rgba(255, 215, 0, 0.2); /* Glow nhẹ */
        transform: translateX(120%); /* Ẩn bên phải */
        transition: transform 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        pointer-events: auto;
        overflow: hidden;
        position: relative;
    }

    .ach-toast.active {
        transform: translateX(0);
    }

    /* Hiệu ứng quét sáng (Shine effect) */
    .ach-toast::before {
        content: '';
        position: absolute;
        top: 0; left: -100%;
        width: 100%; height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 215, 0, 0.2), transparent);
        animation: shine 3s infinite;
    }

    @keyframes shine {
        0% { left: -100%; }
        20% { left: 100%; }
        100% { left: 100%; }
    }

    .ach-icon-wrapper {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #ffd700, #b8860b);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        border: 2px solid #fff;
        flex-shrink: 0;
        animation: bounceIn 0.6s;
    }

    .ach-content {
        flex: 1;
        color: white;
    }

    .ach-title {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #ffd700;
        font-weight: 800;
        margin-bottom: 2px;
    }

    .ach-name {
        font-size: 1rem;
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 4px;
        text-shadow: 0 2px 4px rgba(0,0,0,0.5);
    }

    .ach-points {
        font-size: 0.8rem;
        color: #4ade80; /* Màu xanh lá cho điểm cộng */
        font-weight: 600;
        background: rgba(74, 222, 128, 0.1);
        padding: 2px 8px;
        border-radius: 10px;
        display: inline-block;
    }

    /* Animation cho Icon */
    @keyframes bounceIn {
        0% { transform: scale(0); }
        50% { transform: scale(1.2); }
        100% { transform: scale(1); }
    }
</style>

<div id="achievement-toast-container" class="achievement-toast-container">
    </div>

