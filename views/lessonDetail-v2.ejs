<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= lesson.title %> - Hoc Tap Thu Duc</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/line-numbers/prism-line-numbers.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="/css/styleLessonDetail-v2.css">
</head>
<body>
<div class="lesson-container">
    <!-- Hidden content area with lesson data -->
    <div id="lessonContentArea" data-content='<%= JSON.stringify(lesson.editorData && lesson.editorData.blocks ? lesson.editorData.blocks : [{ type: "text", data: { text: lesson.content || "" } }]) %>' style="display: none;"></div>

    <!-- MINI HEADER (Auto-hide on scroll down, show on scroll up) -->
    <div class="lesson-mini-header" id="lessonHeader">
        <a href="<%= course ? ('/course/' + course._id) : '/subjects' %>" class="btn-back">
            <i class="fas fa-arrow-left"></i>
        </a>
        <div class="title-truncated">
            <h1><%= lesson.title %></h1>
        </div>
        <div class="header-right">
            <span class="page-indicator"><span id="current-page">1</span>/<span id="total-pages">1</span></span>
            <button class="btn-toc-mobile" onclick="toggleSidebar()">
                <i class="fas fa-list"></i>
            </button>
        </div>
    </div>

    <div class="lesson-body-wrapper">
        <!-- LEFT SIDEBAR - TOC -->
        <aside class="lesson-sidebar-toc" id="sidebar-toc">
            <div class="sidebar-header">
                <h3><i class="fas fa-map"></i> Mục lục</h3>
                <button class="btn-close-sidebar d-lg-none" onclick="toggleSidebar()">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div class="toc-content">
                <ul id="toc-list" class="toc-list">
                    <li class="toc-placeholder">Đang tạo mục lục...</li>
                </ul>
            </div>

            <div class="sidebar-footer">
                <div class="progress-widget">
                    <div class="progress-label">Tiến độ</div>
                    <div class="progress">
                        <div id="progress-bar" class="progress-fill"></div>
                    </div>
                    <div class="timer-display" id="timer-display">00:00</div>
                </div>
            </div>
        </aside>

        <!-- MAIN CONTENT -->
        <main class="lesson-main-content">
            <div class="content-wrapper">
                <!-- Content Pages Container -->
                <div id="content-container" class="content-container">
                    <div class="loading-state">
                        <div class="spinner-border spinner-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p>Đang tải nội dung...</p>
                    </div>
                </div>

                <!-- Navigation Controls -->
                <div class="content-navigation">
                    <button id="btn-prev-page" class="btn-nav btn-prev" onclick="previousPage()">
                        <i class="fas fa-chevron-left"></i>
                        <span class="btn-label">Trước</span>
                    </button>

                    <div class="page-progress">
                        <input type="range" id="page-slider" class="page-slider" min="1" max="1" value="1" onchange="goToPage(this.value)">
                        <div class="page-numbers">
                            <span id="page-current">1</span> / <span id="page-total">1</span>
                        </div>
                    </div>

                    <button id="btn-next-page" class="btn-nav btn-next" onclick="nextPage()">
                        <span class="btn-label">Tiếp</span>
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>

                <!-- Complete Button -->
                <div class="content-footer">
                    <button id="btn-complete-lesson" class="btn-complete" onclick="completeLesson('<%= lesson._id %>')">
                        <i class="fas fa-check-circle"></i>
                        <span>Hoàn thành bài học</span>
                    </button>
                </div>
            </div>
        </main>

        <!-- RIGHT SIDEBAR - QUICK INFO -->
        <aside class="lesson-sidebar-info">
            <div class="info-card">
                <h4>Bài học trong khoá</h4>
                <div class="lessons-list">
                    <% if(course && course.lessons) { %>
                        <% course.lessons.forEach((l, idx) => { %>
                            <a href="/lesson/<%= l._id %>" class="lesson-item <%= l._id.toString() === lesson._id.toString() ? 'active' : '' %>">
                                <span class="lesson-number"><%= idx + 1 %></span>
                                <span class="lesson-name"><%= l.title %></span>
                                <% if(l.completed) { %><i class="fas fa-check-circle check-icon"></i><% } %>
                            </a>
                        <% }); %>
                    <% } %>
                </div>
            </div>

            <div class="info-card">
                <h4>Thống kê</h4>
                <div class="stats">
                    <div class="stat-item">
                        <span class="stat-label">Thời gian học</span>
                        <span class="stat-value" id="study-time">00:00</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-label">Trang</span>
                        <span class="stat-value"><span id="stat-pages">1</span>/<span id="stat-total-pages">1</span></span>
                    </div>
                </div>
            </div>
        </aside>
    </div>
</div>

<!-- COMMENTS MODAL -->
<div class="comments-modal-wrapper" id="comments-modal">
    <div class="comments-modal">
        <div class="modal-header">
            <h3><i class="fas fa-comments"></i> Thảo luận</h3>
            <button class="btn-close-modal" onclick="closeComments()">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div class="modal-body">
            <% if (user) { %>
                <div class="comment-form">
                    <textarea 
                        id="comment-input" 
                        placeholder="Chia sẻ ý kiến hoặc hỏi đáp..." 
                        maxlength="5000"></textarea>
                    <div class="form-footer">
                        <span id="comment-chars">0/5000</span>
                        <button id="btn-post-comment" class="btn-primary">
                            <i class="fas fa-paper-plane"></i> Đăng
                        </button>
                    </div>
                </div>
            <% } else { %>
                <div class="login-prompt">
                    <i class="fas fa-info-circle"></i>
                    <p><a href="/login">Đăng nhập</a> để tham gia thảo luận</p>
                </div>
            <% } %>

            <div id="comments-list" class="comments-list">
                <div class="loading-comments">
                    <span>Đang tải bình luận...</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- FLOATING COMMENT BUTTON -->
<button id="btn-open-comments" class="btn-floating-comments" onclick="openComments()" title="Mở thảo luận">
    <i class="fas fa-comments"></i>
    <span id="comment-badge" class="comment-badge" style="display:none;">0</span>
</button>

<!-- SCRIPTS -->
<script src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/contrib/auto-render.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/dompurify@3.0.6/dist/purify.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/autoloader/prism-autoloader.min.js"></script>

<script>
    window.LESSON_ID = '<%= lesson._id %>';
    window.lessonData = {
        content: <%- JSON.stringify(lesson.content) %>
    };
</script>

<script src="/js/lessonDetail-v2-fixed.js"></script>

</body>
</html>
