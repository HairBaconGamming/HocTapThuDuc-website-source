<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>

<style>
    :root {
        --bg-color: #fffbf0;
        --card-bg: #ffffff;
        --border-color: #000;
        --accent-purple: #d1c4e9;
        --accent-green: #c8e6c9;
        --accent-orange: #ffe0b2;
        --accent-blue: #bbdefb;
        --btn-shadow: 4px 4px 0px #000;
    }

    body { background-color: var(--bg-color); }

    /* --- HEADER SECTION --- */
    .dash-header-wrapper {
        background: var(--card-bg);
        border: 3px solid var(--border-color);
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 40px;
        display: flex;
        align-items: center;
        gap: 25px;
        box-shadow: 6px 6px 0px rgba(0,0,0,0.1);
        position: relative;
        overflow: hidden;
    }

    .user-avatar-frame {
        width: 100px; height: 100px;
        position: relative;
    }
    .user-avatar-frame img {
        width: 100%; height: 100%;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid var(--border-color);
        background: #fff;
    }
    .user-avatar-frame::after {
        content: '';
        position: absolute;
        top: 5px; left: 5px;
        width: 100%; height: 100%;
        border-radius: 50%;
        border: 3px solid var(--border-color);
        z-index: -1;
        background: var(--accent-purple);
    }

    .welcome-text h1 {
        font-family: 'Quicksand', sans-serif;
        font-weight: 900;
        font-size: 2.2rem;
        margin: 0;
        color: #1e1e1e;
    }
    .welcome-text p {
        color: #666;
        font-size: 1.1rem;
        margin-top: 5px;
        font-weight: 500;
    }

    .header-actions { margin-left: auto; display: flex; gap: 10px; }

    /* --- BUTTON STYLES --- */
    .btn-retro {
        padding: 10px 20px;
        border: 2px solid var(--border-color);
        border-radius: 12px;
        font-weight: 700;
        text-decoration: none;
        color: #000;
        background: #fff;
        box-shadow: var(--btn-shadow);
        transition: 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }
    .btn-retro:hover { transform: translate(-2px, -2px); box-shadow: 6px 6px 0px #000; }
    .btn-retro:active { transform: translate(2px, 2px); box-shadow: 0 0 0 #000; }
    
    .btn-yellow { background: #fff9c4; }
    .btn-blue { background: #bbdefb; }

    /* --- BENTO GRID ACTIONS --- */
    .bento-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .action-tile {
        background: var(--card-bg);
        border: 3px solid var(--border-color);
        border-radius: 18px;
        padding: 20px;
        text-align: center;
        text-decoration: none;
        color: #000;
        transition: transform 0.2s;
        position: relative;
    }
    .action-tile:hover { transform: translateY(-5px); }
    
    .tile-icon { font-size: 2.5rem; margin-bottom: 10px; display: block; }
    .tile-title { font-weight: 800; font-size: 1.2rem; margin-bottom: 5px; }
    .tile-desc { font-size: 0.9rem; color: #555; }

    .tile-green { background: var(--accent-green); }
    .tile-orange { background: var(--accent-orange); }
    .tile-blue { background: var(--accent-blue); }

    /* --- CONTENT PANELS --- */
    .panel-section {
        background: #fff;
        border: 3px solid var(--border-color);
        border-radius: 20px;
        padding: 25px;
        box-shadow: 8px 8px 0px rgba(0,0,0,0.05);
    }
    .panel-header {
        display: flex; justify-content: space-between; align-items: center;
        margin-bottom: 20px; border-bottom: 2px dashed #ddd; padding-bottom: 15px;
    }
    .panel-title { font-size: 1.5rem; font-weight: 900; display: flex; align-items: center; gap: 10px; }

    /* Lesson List */
    .lesson-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: #f9fafb;
        border: 2px solid #eee;
        padding: 15px;
        border-radius: 12px;
        margin-bottom: 12px;
        transition: 0.2s;
    }
    .lesson-row:hover {
        border-color: var(--border-color);
        background: #fff;
        box-shadow: 4px 4px 0px #eee;
    }
    .lesson-info h4 { margin: 0 0 5px 0; font-size: 1.1rem; font-weight: 700; color: #333; }
    
    .badge-pill {
        background: #eee; padding: 4px 10px; border-radius: 6px;
        font-size: 0.8rem; font-weight: 600; border: 1px solid #ccc;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .dash-header-wrapper { flex-direction: column; text-align: center; }
        .header-actions { margin-left: 0; margin-top: 15px; width: 100%; justify-content: center; }
        .lesson-row { flex-direction: column; align-items: flex-start; gap: 15px; }
        .lesson-row > div:last-child { width: 100%; display: flex; gap: 10px; }
        .lesson-row .btn-retro { flex: 1; justify-content: center; }
    }
</style>

