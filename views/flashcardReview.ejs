                    <div class="card-content" id="txtBack">!</div>
                </div>
            </div>
        </div>

        <div class="review-controls" id="controls">
            <button class="btn-srs btn-fail" onclick="rate(0)">Qu√™n</button>
            <button class="btn-srs btn-hard" onclick="rate(3)">Kh√≥</button>
            <button class="btn-srs btn-good" onclick="rate(4)">Nh·ªõ</button>
