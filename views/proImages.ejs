<%- include('partials/header') %>

<style>
    /* CSS gi·ªØ nguy√™n style ƒë·∫πp nh∆∞ c≈© */
    .pro-gallery-container {
        max-width: 1000px; margin: 40px auto; padding: 20px;
        background: white; border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    }
    .header-area {
        display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;
        border-bottom: 2px solid #f3f4f6; padding-bottom: 20px;
    }
    .upload-zone {
        border: 2px dashed #cbd5e1; border-radius: 12px;
        padding: 40px; text-align: center; cursor: pointer;
        transition: 0.2s; background: #f8fafc;
        position: relative;
    }
    .upload-zone:hover { border-color: #d97706; background: #fffbeb; }
    .upload-zone.dragover { border-color: #d97706; background: #fff7ed; transform: scale(1.01); }
    
    .gallery-grid {
        display: grid; grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 20px; margin-top: 30px;
    }
    .gallery-item {
        position: relative; border-radius: 12px; overflow: hidden;
        aspect-ratio: 1/1; box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        group; cursor: pointer; border: 2px solid transparent; background: #eee;
    }
    .gallery-item:hover { border-color: #d97706; }
    .gallery-item img {
        width: 100%; height: 100%; object-fit: cover; transition: 0.3s;
    }
    .gallery-item:hover img { transform: scale(1.1); }
    
    .item-actions {
        position: absolute; bottom: 0; left: 0; width: 100%;
        background: rgba(0,0,0,0.7); padding: 10px;
        display: flex; justify-content: space-around;
        opacity: 0; transition: 0.2s;
    }
    .gallery-item:hover .item-actions { opacity: 1; }
    
    .action-btn {
        color: white; cursor: pointer; font-size: 1.2rem; transition: 0.2s;
    }
    .action-btn:hover { color: #fbbf24; transform: scale(1.2); }
    .delete-btn:hover { color: #ef4444; }

    /* Progress Bar */
    .progress-wrapper {
        display: none; margin-top: 15px;
    }
    .progress-bar {
        width: 100%; height: 6px; background: #e5e7eb; border-radius: 3px; overflow: hidden;
    }
    .progress-fill {
        height: 100%; background: #d97706; width: 0%; transition: width 0.2s;
    }
</style>

<div class="container">
    <div class="pro-gallery-container">
        
        <div class="header-area">
            <div>
                <h2 style="margin:0; color: #1f2937;">Kho ·∫¢nh PRO üëë</h2>
                <p style="margin:5px 0 0; color:#6b7280;">L∆∞u tr·ªØ ·∫£nh c√° nh√¢n (GridFS Storage).</p>
            </div>
            <a href="/profile" class="btn-secondary" style="padding: 8px 16px; border-radius: 8px; text-decoration: none;">
                <i class="fas fa-arrow-left"></i> Quay l·∫°i
            </a>
        </div>

        <div class="upload-zone" id="dropZone" onclick="document.getElementById('fileInput').click()">
            <i class="fas fa-cloud-upload-alt" style="font-size: 3rem; color: #d97706; margin-bottom: 15px;"></i>
            <h4 style="margin:0; color:#374151;">Click ho·∫∑c K√©o ·∫£nh v√†o ƒë√¢y ƒë·ªÉ t·∫£i l√™n</h4>
            <p style="margin:5px 0 0; color:#9ca3af; font-size: 0.9rem;">H·ªó tr·ª£: JPG, PNG, GIF (Max 50MB)</p>
            <input type="file" id="fileInput" hidden accept="image/*" onchange="handleFiles(this.files)">
            
            <div class="progress-wrapper" id="progressWrapper">
                <div class="progress-bar"><div class="progress-fill" id="progressFill"></div></div>
                <div style="font-size: 0.8rem; color: #6b7280; margin-top: 5px;">ƒêang x·ª≠ l√Ω...</div>
            </div>
        </div>

        <div id="galleryGrid" class="gallery-grid">
            <div style="grid-column:1/-1; text-align:center; padding: 40px; color:#9ca3af;">
                <i class="fas fa-spinner fa-spin"></i> ƒêang t·∫£i d·ªØ li·ªáu...
            </div>
        </div>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // 1. LOAD IMAGES
    async function loadImages() {
        const grid = document.getElementById('galleryGrid');
        try {
            const res = await fetch('/api/pro-images/list');
            
            if (!res.ok) throw new Error('L·ªói t·∫£i danh s√°ch ·∫£nh');
            
            const data = await res.json();
            
            grid.innerHTML = '';
            if (!data || data.length === 0) {
                grid.innerHTML = `<div style="grid-column:1/-1; text-align:center; padding: 40px; color:#9ca3af; font-style:italic;">
                    Ch∆∞a c√≥ ·∫£nh n√†o. H√£y t·∫£i l√™n ngay!
                </div>`;
                return;
            }

            data.forEach(img => {
                // img bao g·ªìm: _id, filename, url, metadata...
                const div = document.createElement('div');
                div.className = 'gallery-item';
                div.innerHTML = `
                    <img src="${img.url}" loading="lazy" onerror="this.src='/img/placeholder.png'">
                    <div class="item-actions">
                        <i class="fas fa-link action-btn" title="Copy Link" onclick="copyLink('${img.url}')"></i>
                        <i class="fas fa-trash-alt action-btn delete-btn" title="X√≥a ·∫£nh" onclick="deleteImage('${img._id}')"></i>
                    </div>
                `;
                grid.appendChild(div);
            });
        } catch(e) {
            console.error(e);
            grid.innerHTML = '<p style="color:red; text-align:center;">L·ªói k·∫øt n·ªëi server.</p>';
        }
    }

    // 2. UPLOAD HANDLING
    const dropZone = document.getElementById('dropZone');
    
    // Drag & Drop effects
    dropZone.addEventListener('dragover', (e) => { e.preventDefault(); dropZone.classList.add('dragover'); });
    dropZone.addEventListener('dragleave', () => dropZone.classList.remove('dragover'));
    dropZone.addEventListener('drop', (e) => {
        e.preventDefault();
        dropZone.classList.remove('dragover');
        handleFiles(e.dataTransfer.files);
    });

    async function handleFiles(files) {
        if(files.length === 0) return;
        const file = files[0];

        // UI Loading
        document.getElementById('progressWrapper').style.display = 'block';
        const pFill = document.getElementById('progressFill');
        pFill.style.width = '30%';

        const formData = new FormData();
        formData.append('image', file);

        try {
            const res = await fetch('/api/pro-images/upload', {
                method: 'POST',
                body: formData
            });
            
            const data = await res.json();

            // Backend GridFS tr·∫£ v·ªÅ 201 Created khi th√†nh c√¥ng
            if (res.ok) {
                pFill.style.width = '100%';
                setTimeout(() => {
                    document.getElementById('progressWrapper').style.display = 'none';
                    pFill.style.width = '0%';
                    loadImages(); // Reload list
                    Swal.fire({
                        toast: true, position: 'top-end', icon: 'success', 
                        title: 'T·∫£i ·∫£nh th√†nh c√¥ng!', showConfirmButton: false, timer: 3000
                    });
                }, 500);
            } else {
                throw new Error(data.error || 'L·ªói upload');
            }
        } catch(e) {
            document.getElementById('progressWrapper').style.display = 'none';
            Swal.fire('L·ªói', e.message || 'Kh√¥ng th·ªÉ t·∫£i ·∫£nh.', 'error');
        }
    }

    // 3. ACTIONS
    function copyLink(url) {
        const fullUrl = window.location.origin + url;
        navigator.clipboard.writeText(fullUrl);
        Swal.fire({
            toast: true, position: 'top-end', icon: 'success', 
            title: 'ƒê√£ copy link ·∫£nh!', showConfirmButton: false, timer: 1500
        });
    }

    async function deleteImage(id) {
        const result = await Swal.fire({
            title: 'X√≥a ·∫£nh n√†y?', text: "Kh√¥ng th·ªÉ kh√¥i ph·ª•c sau khi x√≥a.",
            icon: 'warning', showCancelButton: true, confirmButtonText: 'X√≥a ngay', cancelButtonText: 'H·ªßy'
        });

        if(result.isConfirmed) {
            try {
                const res = await fetch('/api/pro-images/' + id, { method: 'DELETE' });
                const data = await res.json();
                
                // Backend tr·∫£ v·ªÅ 200 OK khi x√≥a th√†nh c√¥ng
                if(res.ok) {
                    loadImages();
                    Swal.fire('ƒê√£ x√≥a!', '·∫¢nh ƒë√£ b·ªã x√≥a.', 'success');
                } else {
                    Swal.fire('L·ªói', data.error || 'Kh√¥ng x√≥a ƒë∆∞·ª£c', 'error');
                }
            } catch(e) {
                Swal.fire('L·ªói', 'L·ªói k·∫øt n·ªëi server', 'error');
            }
        }
    }

    // Init
    document.addEventListener('DOMContentLoaded', loadImages);
</script>

